


<div class="page-header col-sm-12" style="margin-top: 0">
	<h3>广告信息:</h3>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="form-horizontal col-sm-8">
			<div class="form-group">
				<label class="col-sm-2 control-label">广告名称:</label>
				<div class="col-sm-9">
					<input class="form-control" type="text" id="name"
						placeholder="广告名称" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">广告积分:</label>
				<div class="col-sm-9">
					<input class="form-control" type="text" id="leves"
						placeholder="广告积分" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">广告等级:</label>
				<div class="col-sm-9">
					<input class="form-control" type="text" id="score"
						placeholder="广告等级" />
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">广告描述:</label>
				<div class="col-sm-9">
					<textarea class="form-control" rows="5" placeholder="广告描述"
						id="description"></textarea>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 ">
					<button type="button" class="btn btn-success" id="submit">提交</button>
				</div>
			</div>
		</div>

		<div id="localImag" class="col-sm-2">
		     <div class="upload-container" id="upimage">
               <input type="file" name="fileToUpload" id="fileToUpload" class="fileupload" />
           </div>
		</div>
	</div>
</div>

